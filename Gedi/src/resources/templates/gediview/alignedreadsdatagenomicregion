		<ReadCountMode m="<?JS readmode ?>" />
	</AlignedReadsDataToCoverageMapper>
	<NumericNormalize id="+.<?JS id ?>.coverage" input="+.<?JS id ?>.coveragenn" totals="<?JS print(EI.wrap(totals).concat(",")); ?>" />
